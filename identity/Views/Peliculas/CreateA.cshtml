@model identity.Models.Peliculas
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <!-- Me lleva a la vista create-->
            <form method="post" asp-action="CreateA">
                <!-- psra validar del lado del servidor-->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              

                <div class="form-group">
                    <label asp-for="url2" class="control.label"></label>
                    <input asp-for="url2" class="form-control" />

                    <!-- Para vslidar el lado del cliente-->
                    <span asp-validation-for="url2" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="nombre" class="control.label"></label>
                    <input asp-for="nombre" class="form-control" />

                    <!-- Para vslidar el lado del cliente-->
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>


                  <div class="form-group">
                    <label asp-for="sinopsis" class="control.label"></label>
                    <input asp-for="sinopsis" class="form-control" />

                    <!-- Para vslidar el lado del cliente-->
                    <span asp-validation-for="sinopsis" class="text-danger"></span>
                </div>

                  <div class="form-group">
                    <label asp-for="director" class="control.label"></label>
                    <input asp-for="director" class="form-control" />

                    <!-- Para vslidar el lado del cliente-->
                    <span asp-validation-for="director" class="text-danger"></span>
                </div>

                  <div class="form-group">
                    <label asp-for="genero" class="control.label"></label>
                    <input asp-for="genero" class="form-control" />

                    <!-- Para vslidar el lado del cliente-->
                    <span asp-validation-for="genero" class="text-danger"></span>
                </div>

                  <div class="form-group">
                    <label asp-for="calificacion" class="control.label"></label>
                    <input asp-for="calificacion" class="form-control" />

                    <!-- Para vslidar el lado del cliente-->
                    <span asp-validation-for="calificacion" class="text-danger"></span>
                </div>

             
                <div class="form-group">
                    <input type="submit" value="Crear libro" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>